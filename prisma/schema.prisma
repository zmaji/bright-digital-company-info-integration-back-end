generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  portalId    Int?    @unique
  emailAddress  String   @unique
  password   String
  secret     String
  roles      String[]
}

model HubToken {
  id           Int       @id @default(autoincrement())
  portalId    Int?   @unique
  accessToken String   @unique
  refreshToken String
  createdAt   DateTime  @default(now())
  expiresIn   Int
  updatedAt   DateTime?
}
