generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  emailAddress  String   @unique
  password   String
  secret     String
  roles      String[]
}

model HubToken {
  id           Int       @id @default(autoincrement())
  portal_id    Int    @unique
  access_token String
  refresh_token String
  created_at   DateTime  @default(now())
  expires_in   Int
  updated_at   DateTime?
}
